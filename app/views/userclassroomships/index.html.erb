<div class="xs-60-container">
<h2 class="welcome-title text-center">審核管理</h2>
  <table class="table table-hover classroom-table">
    <tr>
      <td class="text-center">課程名稱</td>
      <td class="text-center">待審核人數</td>
    </tr>
    <% @classrooms.each do |classroom| %>
    <tr>
      <td class="text-center">
        <%= link_to classroom.name,userclassroomship_path(classroom) %>
      </td>
      <td class="text-center">
        <a href="<%=userclassroomship_path(classroom) %>">
          待審核人數：<%= classroom.userclassroomships.where('approved=?',false).count %>
        </a>
      </td>
    </tr>
  <% end %>
  </table>
</div>
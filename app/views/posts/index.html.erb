<div class="post-body">
  <div class="clearfix">
    <div class="col-xs-4 text-center">分類</div>
    <div class="col-xs-4 text-center">文章標題</div>
    <div class="col-xs-4 text-center">更新時間</div>
  </div>
  <% @posts.each do |p| %>
    <%= link_to post_path(p),class:"clearfix" do %>
      <div class="postwrapper clearfix">
        <div class="col-xs-4 text-center">
              <%=  Posttype.find(p.posttype_id).typename  %>
        </div>
        <div class="col-xs-4 text-center">
              <%= p.topic %>
        </div>
        <div class="col-xs-4 text-center">
              <%= p.updated_at.to_s(:short) %>
        </div>
    </div>
    <% end %>
  <% end %>
  <div class="text-center">
    <%= paginate @posts %>
    </br>
    <% if current_user && current_user.adminkey_id == 1 %>
      <%= link_to '新增文章', new_post_path, :class => "btn btn-primary"  %>
    <% end %>
  </div>
</div>


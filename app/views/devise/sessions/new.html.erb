<div class="xs-60-container container devise">
  <h2 class="welcome-title">登入</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :accountname,"帳號" %><br />
      <%= f.text_field :accountname, autofocus: true ,:class => 'form-control' %>
    </div>
  
    <div class="field form-group">
      <%= f.label :password,"密碼" %><br />
      <%= f.password_field :password, autocomplete: "off"  ,:class => 'form-control' %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,"記憶帳號" %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "登入" , :class => 'btn btn-primary' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
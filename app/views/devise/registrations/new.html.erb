<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :accountname, '帳號' %><br />
    <%= f.text_field :accountname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email,'電子信箱' %><br />
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :name,'暱稱' %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :birthday,'生日' %><br />
    <%= f.date_select :birthday %>
  </div>


  <div class="field">
    <%= f.label :password, "密碼" %>
    <% if @minimum_password_length %>
    <em>(至少需要<%= @minimum_password_length %>個字元)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"重複一次密碼" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "送出申請" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

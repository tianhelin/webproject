<div class="xs-60-container container devise">
  <h2 class="welcome-title">註冊帳號</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="field form-group">
        <%= f.label :accountname, '帳號' %><br />
        <%= f.text_field :accountname, autofocus: true , :class => 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :email,'電子信箱' %><br />
        <%= f.email_field :email , :class => 'form-control' %>
      </div>
      
      <div class="field form-group">
        <%= f.label :name,'暱稱' %><br />
        <%= f.text_field :name , :class => 'form-control' %>
      </div>
      
      <div class="field form-group">
        <%= f.label :birthday,'生日' %><br />
        <%= f.date_select :birthday %>
      </div>
    
    
      <div class="field form-group">
        <%= f.label :password, "密碼" %>
        <% if @minimum_password_length %>
        <em>(至少需要<%= @minimum_password_length %>個字元)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" , :class => 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password_confirmation,"重複一次密碼" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit "送出申請" ,:class => 'btn btn-primary' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
